    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.gaul</groupId>
                    <artifactId>modernizer-maven-plugin</artifactId>
                    <configuration>
                        <violationsFiles>
                            <violationsFile>${dep.air.check.dir}/src/modernizer/violations.xml</violationsFile>
                        </violationsFiles>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>com.mycila</groupId>
                    <artifactId>license-maven-plugin</artifactId>
                    <version>2.3</version>
                    <configuration>
                        <validHeaders>
                            <item>${dep.air.check.dir}/src/main/resource/license/license-header.txt</item>
                            <item>${dep.air.check.dir}/src/main/resource/license/license-header-alternate-2010.txt</item>
                            <item>${dep.air.check.dir}/src/main/resource/license/license-header-alternate-2012.txt</item>
                            <item>${dep.air.check.dir}/src/main/resource/license/license-header-alternate-2020.txt</item>
                            <item>${dep.air.check.dir}/src/main/resource/license/license-header-alternate-2021.txt</item>
                            <item>${dep.air.check.dir}/src/main/resource/license/license-header-alternate-2022.txt</item>
                            <item>${dep.air.check.dir}/src/main/resource/license/license-header-third.txt</item>
